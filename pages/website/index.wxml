<!--pages/music/index.wxml-->
<view class='page'>
       <view class="weui-panel weui-panel_access"> 
          <view class="weui-panel__bd">
            <block wx:for="{{websites}}" wx:key="*this">
              <navigator class="weui-media-box weui-media-box_text" url="{{item.src}}">
                  <view class="weui-media-box__title weui-media-box__title_in-text">{{item.title}}</view>
                  <view class="weui-media-box__desc">网址：{{item.src}}</view>
                  <view class="weui-media-box__desc">简介：{{item.desc}}</view>
              </navigator>
            </block>  
          </view>
       </view> 
</view>