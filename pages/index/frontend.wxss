/* pages/index/house.wxss */
@import "index.wxss";
page{
  background: #f1f1f1
}
.banner{
  width: 100%;
  height: 10rem;
}
.title{
  text-align: center
}
.subtitle{
  
}
.content{
  padding: .4rem;
  background: #fff; 
  margin-bottom: .4rem;
  text-align: left
}
.summary{
  font-size: 14px;
}
.detail-list{
  width: 100%;
}
.detail-item{
  width: 86%;
  padding: .8rem;
  margin: 0 auto;
  margin-top: .6rem;
  margin-bottom: .6rem;
  position: relative;
  background: #fff;
}
.detail-content{
  /* height: 120px; */
  display: flex;
  padding: .5rem 0;
}
.detail-cover{
  flex: .3;
}
.cover{
  width: 85px;
  height: 110px;
}
.detail-desc{
  flex: .7;
  padding-left: .5rem; 
}
.detail-txt{
  width: 100%;
  display: inline-block;
}
.detail-tips{
  padding: .5rem 0 0 0;
  border-top: 1px dashed #e1e1e1;
}
